{
	"compilerOptions": {
		"baseUrl": ".",
		"composite": false,
		"declaration": true,
		"declarationMap": true,
		"exactOptionalPropertyTypes": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"inlineSources": true,
		"lib": ["ES2023"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"newLine": "LF",
		"noEmitOnError": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitOverride": true,
		"noUncheckedIndexedAccess": true,
		// noUnusedLocals and noUnusedParameters are enforced through eslint
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"outDir": "../dist",
		"resolveJsonModule": true,
		"resolvePackageJsonImports": true,
		"rootDir": ".",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2023",
		"typeRoots": ["../node_modules/@types"],
		"types": ["node"],
		"useUnknownInCatchVariables": true
	},
	"exclude": ["**/*.test.ts"],
	"include": ["**/*.ts"]
}
